body {
    background-image: url("/photos/background_1.jpg");
    background-color: black;
    background-repeat: no-repeat;
    background-position: center center;
    background-attachment: fixed;
    -webkit-background-size: cover;
    -moz-background-size: cover;
    -o-background-size: cover;
    background-size: cover;
}
.menu{
    list-style: none;
    margin: 0px;
    padding: 0 50px;
    line-height: 102px;
    float: right;
    margin-right: 100px;
}
ul li{
    display: inline-block;
    padding: 0 10px;
    height: 100px;
    margin: 0 10px;
    float: left;
    box: 10px 40px;
}
.link_1{
    font-size: 25px;
    text-decoration: none;
    color: black;
}
.menu li:hover {
    font-weight: lighter;
    transform: scale(1);
    box-shadow: 2px 2px 5px black;
    cursor: pointer;
}
.figure{
    text-align: center;
    cursor: pointer;
    border-radius: 40px;
    background: lavenderblush;
}
#rectangle {
    width: 150px;
    height: 35px;
}
.button_varify_and_send {
    cursor: pointer;
    padding: 10px 30px;
    height: 50px;
    color: black;
    background: lavenderblush;
    border: none;
    border-radius: 40px;
    text-transform: uppercase;
    font-size: 15px;
    box-shadow: 2px 2px 5px black;
}
.button_varify_and_send:hover{
    opacity: .80;
    font-weight: bold;
    transform: scale(1.1);
}
form{
    font-size: 30px;
}
input{
    font-size: 20px;
    width: 200px;
    height: 50px;
    border-radius: 30px;
    padding-left: 10px;
}
.form_result{
    font-size: 30px;
}
